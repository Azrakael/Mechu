<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mechu">

    <LinearLayout
        android:id="@+id/search_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">



        <!-- 검색 부분 -->



        <!-- 뒤로 가기 버튼 -->
        <ImageView
            android:id="@+id/backButton1"
            android:layout_width="31dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_back"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.025" />


        <!-- 검색 텍스트 부분 -->
        <EditText
            android:id="@+id/ResultText"
            android:layout_width="303dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="10dp"
            android:textSize="18dp"/>

        <!-- 검색 이미지 부분 -->
        <ImageView
            android:id="@+id/search_search1"
            android:layout_marginLeft="-20dp"
            android:layout_width="41dp"
            android:layout_height="48dp"
            android:clickable="true"
            android:src="@drawable/ic_search" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/search_part"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_search">


        <View
            android:id="@+id/black_line"
            android:layout_width="298dp"
            android:layout_height="2dp"
            android:layout_marginLeft="14dp"
            android:visibility="invisible"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </LinearLayout>
    <!-- 검색 결과 뷰 -->


    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/search_part">

        <!-- 검색 결과 부분 -->

        <LinearLayout
            android:id="@+id/food_container"
            android:layout_width="375dp"
            android:layout_height="610dp"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:padding="8dp">

        </LinearLayout>



    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>
