<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/mechu">

    <ImageView
        android:layout_width="86dp"
        android:layout_height="62dp"
        android:src="@drawable/characterlogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.017" />

    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="156dp"
        android:layout_height="74dp"
        android:src="@drawable/mechulogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.227"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/logoImage"
        app:layout_constraintBottom_toTopOf="@id/bottomNavigationView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 프로그레스 바 아직 구현 안됨-->

            <ImageView
                android:id="@+id/semiCircleProgressBar"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                app:backgroundColor="#853333"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="오늘은 이런 메뉴 어때요?"
                android:textSize="20dp" />

            <!--추천 음식들 -->
            <LinearLayout
                android:id="@+id/foodCart1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_background"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 음식 사진 -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/foodImage1"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu"/>
                </LinearLayout>

                <!-- 음식 이름, 칼로리, 하트 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!--음식 설명 -->
                    <LinearLayout
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:text="더 담은 도시락"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150kcal"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/buttonFavorite1"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/button_favorite"
                            android:checked="false"
                            android:onClick="onFavoriteButtonClick"
                            android:text=""
                            android:textOff=""
                            android:textOn="" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이 음식은 100퍼센트 유기농으로 만든 도시락이며 정말 배고플때 마음껏 드실 수 있어요 살이 찌지 않기 때문이거든요"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/foodCart2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_background"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 음식 사진 -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/foodImage2"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu"/>
                </LinearLayout>

                <!-- 음식 이름, 칼로리, 하트 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:text="더 담은 도시락"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150kcal"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/buttonFavorite2"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/button_favorite"
                            android:layout_marginLeft="20dp"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn=""
                            android:onClick="onFavoriteButtonClick"/>

                    </LinearLayout>

                    <!--음식 설명 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이 음식은 100퍼센트 유기농으로 만든 도시락이며 정말 배고플때 마음껏 드실 수 있어요 살이 찌지 않기 때문이거든요"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>



            <LinearLayout
                android:id="@+id/foodCart3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/checkbox_background"
                android:layout_marginTop="15dp"
                android:padding="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- 음식 사진 -->
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/foodImage3"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:src="@drawable/ic_menu"/>
                </LinearLayout>

                <!-- 음식 이름, 칼로리, 하트 -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="249dp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="50dp"
                            android:text="더 담은 도시락"
                            android:textColor="#000000"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="150kcal"
                            android:textColor="#000000"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ToggleButton
                            android:id="@+id/buttonFavorite3"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:background="@drawable/button_favorite"
                            android:checked="false"
                            android:text=""
                            android:textOff=""
                            android:textOn=""
                            android:onClick="onFavoriteButtonClick"
                            android:layout_marginLeft="20dp" />

                    </LinearLayout>

                    <!--음식 설명 -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="이 음식은 100퍼센트 유기농으로 만든 도시락이며 정말 배고플때 마음껏 드실 수 있어요 살이 찌지 않기 때문이거든요"
                        android:textAlignment="center"
                        android:textStyle="bold"
                        android:textColor="#000000"/>
                </LinearLayout>
            </LinearLayout>




        </LinearLayout>

    </ScrollView>

    <!-- 여기까지  스크롤 가능-->


    <!-- 하단 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        app:itemBackground="@drawable/bottom_nav_background"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:menu="@menu/menu"
        tools:layout_editor_absoluteX="0dp" />



</androidx.constraintlayout.widget.ConstraintLayout>
