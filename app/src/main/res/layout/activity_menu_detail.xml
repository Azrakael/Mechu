<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mechu">


    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/mechulogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@android:color/black"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        tools:layout_editor_absoluteX="16dp" />

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/characterlogo"
        android:id="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        android:layout_marginTop="15dp"/>

    <TextView
        android:id="@+id/menuTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="메뉴명"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/logoImage" />

    <TextView
        android:id="@+id/menuCal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="칼로리 정보"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/menuTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuProtein"
        android:text="단백질함량"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/menuCal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuFat"
        android:text="지방함량"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/menuProtein" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/menuCalbohydrate"
        android:text="탄수화물함량"
        android:textSize="13sp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:layout_constraintStart_toEndOf="@+id/menuImage"
        app:layout_constraintTop_toBottomOf="@+id/menuFat" />

    <LinearLayout
        android:id="@+id/linearLayoutDetails"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/menuImage"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <!-- 메뉴 설명 -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드설명추가 예정 필드."
            android:padding="8dp"/>

        <!-- 영양소 그래프 -->
        <View
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@android:color/darker_gray" />
    </LinearLayout>

    <!-- 좋아요 버튼 -->
    <ImageButton
        android:id="@+id/likeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/like_default"
        android:layout_marginTop="-35dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDetails"
        app:layout_constraintEnd_toStartOf="@+id/dislikeButton"
        android:layout_marginEnd="20dp" />

    <!-- 싫어요 버튼 -->
    <ImageButton
        android:id="@+id/dislikeButton"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/dislike_default"
        android:layout_marginRight="10dp"
        android:layout_marginTop="-35dp"
        app:layout_constraintTop_toTopOf="@+id/linearLayoutDetails"
        app:layout_constraintEnd_toEndOf="@+id/linearLayoutDetails" />





</androidx.constraintlayout.widget.ConstraintLayout>