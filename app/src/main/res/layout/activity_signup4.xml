<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mechu"
    tools:context=".SignUp4">

    <!-- 뒤로 가기 버튼 -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025" />

    <!-- 로고 이미지 -->
    <ImageView
        android:id="@+id/logoImage"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:src="@drawable/mechulogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <!-- 로고 밑 바 -->
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        android:background="@android:color/black" />


    <!-- 활동량 선택 라디오 그룹 -->
    <RadioGroup
        android:id="@+id/radioGroupActivityLevel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/logoImage"
        android:layout_marginTop="16dp">

        <RadioButton
            android:id="@+id/radioButtonNoExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="운동 아예 안함"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonLightExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가벼운 운동 (일주일에 1~2회)"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonModerateExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="적당한 운동 (일주일에 3~4회)"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonIntenseExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="격렬한 운동 (일주일에 5~6회)"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/radioButtonVeryIntenseExercise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="힘든 운동 (일주일에 6~7회)"
            android:textSize="18sp" />
    </RadioGroup>

    <!-- 완료 버튼 -->
    <Button
        android:id="@+id/completeSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="완료"
        android:textStyle="bold"
        android:background="@drawable/basic_button"
        android:textColor="#FF000000"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/radioGroupActivityLevel"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        app:layout_constraintHorizontal_bias="0.5" />

</androidx.constraintlayout.widget.ConstraintLayout>
