<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/mechu">




    <!--취소 버튼 1 -->
    <ImageView
        android:id="@+id/backButton23"
        android:layout_width="31dp"
        android:layout_height="match_parent"
        android:src="@drawable/ic_back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025"
        android:layout_marginBottom="710dp"
        android:visibility="invisible"
        android:clickable="true" />

    <LinearLayout
        android:id="@+id/search_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.025">





        <!-- 검색 부분 -->
        <ImageView
            android:id="@+id/search_search1"
            android:layout_width="41dp"
            android:layout_height="38dp"
            android:clickable="true"
            android:src="@drawable/ic_search" />

        <EditText
            android:id="@+id/edittext"
            android:layout_width="303dp"
            android:layout_marginLeft="-10dp"
            android:visibility="invisible"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:hint="원하는 음식을 검색하세요" />

        <!-- 취소버튼 -->
        <Button
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:layout_weight="1"
            android:background="#00ff"
            android:clickable="true"
            android:padding="1dp"
            android:text="취소"
            android:textColor="#000000"
            android:textSize="18sp" />






    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_search">


        <View
            android:id="@+id/black_line"
            android:layout_width="298dp"
            android:visibility="invisible"
            android:layout_height="2dp"
            android:layout_marginLeft="44dp"
            android:background="#000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


    </LinearLayout>
    <!-- 검색 히스토리 뷰 -->

    <!-- 여기에 검은색 줄을 나타내는 View 추가 -->
    <LinearLayout
        android:id="@+id/search_history_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_search">

        <TextView
            android:id="@+id/visibilitySwitch"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:text="최근 검색어"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/deleteAllButton"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="200dp"
            android:layout_weight="1"
            android:background="#00ff"
            android:padding="1dp"
            android:text="전체삭제"
            android:textColor="#000000"
            android:clickable="true"
            android:textSize="12sp" />
    </LinearLayout>


<!--검색기록부분-->
    <LinearLayout
        android:id="@+id/search_part"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search_history_view">


        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/search_history_view">

            <!-- 동적으로 Chip 추가될 위치 -->

        </com.google.android.material.chip.ChipGroup>


    </LinearLayout>


<!--인기검색어 -->
   <LinearLayout
       android:id="@+id/favoritesearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/search_part"
        tools:layout_editor_absoluteX="38dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="인기검색어" />

    </LinearLayout>



    <LinearLayout
        android:id="@+id/noresult"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/search_part"
        tools:layout_editor_absoluteX="38dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="70dp"
        android:textSize="15dp"
        android:text="검색된 결과가 없습니다. 다시 검색해주세요" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
